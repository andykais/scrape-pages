{
  "compilerOptions": {
    "outDir": "../lib/",
    "incremental": true,
    "lib": ["es2017"],
    "tsBuildInfoFile": "../node_modules/.cache/tsconfig.buildinfo",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["../src/**/*.ts", "../examples/**/*.ts", "custom.d.ts", "../testing/**/*.ts"]
}
