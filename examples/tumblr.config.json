{
  "input": "username",
  "scrape": {
    "download": {
      "urlTemplate": "https://{{ username }}.tumblr.com/api/read/json?start={{'*' index 50 }}&num=50"
    },
    "incrementUntil": "failed-download",
    "scrapeEach": {
      "name": "parse-json",
      "parse": {
        "expect": "json",
        "selector": "posts[type:photo]"
      },
      "regexCleanup": "var tumblr_api_read = ",
      "scrapeEach": [
        {
          "name": "image",
          "parse": {
            "selector": "photo-url-1280"
          },
          "regexCleanup": {
            "select": "https://d+?.",
            "replace": "https://"
          },
          "scrapeEach": {
            "download": "{value}"
          }
        },
        {
          "name": "tags",
          "parse": {
            "selector": "tags"
          }
        }
      ]
    }
  }
}
