{
  "input": "artist",
  "scrapers": {
    "gallery": {
      "download": {
        "urlTemplate": "https://{{ artist }}.deviantart.com/gallery/?catpath=/&offset={{'*' index 24}}"
      },
      "parse": {
        "selector": ".torpedo-thumb-link",
        "attribute": "href"
      },
      "incrementUntil": "failed-download"
    },
    "post": {
      "download": "{value}",
      "parse": {
        "selector": ".dev-view-deviation",
        "attribute": "src"
      }
    },
    "media": {
      "download": "{value}"
    }
  },
  "run": {
    "scraper": "gallery",
    "scrapeEach": {
      "scraper": "post",
      "scrapeEach": {
        "scraper": "media"
      }
    }
  }
}
