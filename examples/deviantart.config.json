{
  "input": "artist",
  "scrape": {
    "download": {
      "urlTemplate": "https://{{ artist }}.deviantart.com/gallery/?catpath=/&offset={{'*' index 24}}"
    },
    "parse": {
      "selector": ".torpedo-thumb-link",
      "attribute": "href"
    },
    "incrementUntil": "failed-download",
    "scrapeEach": {
      "download": "{value}",
      "parse": {
        "selector": ".dev-view-deviation",
        "attribute": "src"
      },
      "scrapeEach": {
        "download": "{value}"
      }
    }
  }
}
