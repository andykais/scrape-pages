{
  "compilerOptions": {
    "outDir": "./lib/",
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsconfig.buildinfo",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "resolveJsonModule": true,
    "plugins": [{ "transform": "typescript-is/lib/transform-inline/transformer" }]
  },
  "include": ["src/**/*.ts", "examples/**/*.ts", "custom.d.ts", "testing/**/*.ts"]
}
